<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".view.fav.FavTeamFragment" android:layout_margin="16dp">
    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/favTeamRecycler"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/favTeamProgressBar" android:layout_gravity="center"
            android:indeterminateTint="@color/colorPrimary" android:visibility="gone"/>
    <TextView
            android:text="@string/noData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/favTeamNoData" android:layout_gravity="center"
            android:visibility="gone"/>
</FrameLayout>